{
 "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
 "contentVersion": "1.0.0.0",
 "parameters": {
   "vnetName": {
     "type": "string",
     "defaultValue": "vnet_preprod_eastus",
     "metadata": {
       "description": "VNet name"
     }
   },
   "vnetAddressPrefix": {
     "type": "string",
     "defaultValue": "10.0.8.0/22",
     "metadata": {
       "description": "Address prefix"
     }
   },
   "NSG1": {
     "defaultValue": "NSG_Web_PreProd_eastus",
     "type": "string",
     "metadata": {
       "description": "Name of NSG for Web_PreProd subnet"
     }
   },
   "subnet1Prefix": {
     "type": "string",
     "defaultValue": "10.0.8.0/24",
     "metadata": {
       "description": "Subnet 1 Prefix"
     }
   },
   "subnet1Name": {
     "type": "string",
     "defaultValue": "Web_PreProd_eastus",
     "metadata": {
       "description": "Subnet 1 Name"
     }
   },
   "NSG2": {
     "defaultValue": "NSG_App_PreProd_eastus",
     "type": "string",
     "metadata": {
       "description": "Name of NSG for App_PreProd subnet"
     }
   },
   "subnet2Prefix": {
     "type": "string",
     "defaultValue": "10.0.9.0/24",
     "metadata": {
       "description": "Subnet 2 Prefix"
     }
   },
   "subnet2Name": {
     "type": "string",
     "defaultValue": "App_PreProd_eastus",
     "metadata": {
       "description": "Subnet 2 Name"
     }
   },
   "NSG3": {
     "defaultValue": "NSG_DB_PreProd_eastus",
     "type": "string",
     "metadata": {
       "description": "Name of NSG for DB_PreProd subnet"
     }
   },
   "subnet3Prefix": {
     "type": "string",
     "defaultValue": "10.0.10.0/24",
     "metadata": {
       "description": "Subnet 3 Prefix"
     }
   },
   "subnet3Name": {
     "type": "string",
     "defaultValue": "DB_PreProd_eastus",
     "metadata": {
       "description": "Subnet 3 Name"
     }
   },
   "BastionsubnetPrefix": {
     "type": "string",
     "defaultValue": "10.0.11.0/27",
     "metadata": {
       "description": "Subnet 2 Prefix"
     }
   },
   "BastionsubnetName": {
     "type": "string",
     "defaultValue": "AzureBastionSubnet",
     "metadata": {
       "description": "Bastion Subnet  Name"
     }
   },
   "RecoveryServicesVaultName": {
     "type": "string",
     "defaultValue": "dev-eastus",
     "metadata": {
       "description": "Recovery services vault for PreProd subscription"
     }
   },
   "location": {
     "type": "string",
     "defaultValue": "[resourceGroup().location]",
     "metadata": {
       "description": "Location for all resources."
     }
   }
 },
 "variables": {},
 "resources": [
   {
     "name": "[parameters('NSG1')]",
     "type": "Microsoft.Network/networkSecurityGroups",
     "apiVersion": "2018-10-01",
     "location": "[parameters('location')]",
     "properties": {
      "securityRules": [

       ]
     }
   },
   {
     "name": "[parameters('NSG2')]",
     "type": "Microsoft.Network/networkSecurityGroups",
     "apiVersion": "2018-10-01",
     "location": "[parameters('location')]",
     "properties": {
       "securityRules": [

       ]
     }
   },
   {
     "name": "[parameters('NSG3')]",
     "type": "Microsoft.Network/networkSecurityGroups",
     "apiVersion": "2018-10-01",
     "location": "[parameters('location')]",
     "properties": {
       "securityRules": [

       ]
     }
   },
   {
     "apiVersion": "2015-05-01-preview",
     "type": "Microsoft.Network/virtualNetworks",
     "name": "[parameters('vnetName')]",
     "location": "[parameters('location')]",
     "dependsOn": [
         "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG1'))]",
         "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG2'))]",
         "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG3'))]"
         ],
     "properties": {
       "addressSpace": {
         "addressPrefixes": [
           "[parameters('vnetAddressPrefix')]"
         ]
       },
       "subnets": [
         {
           "name": "[parameters('subnet1Name')]",
           "properties": {
             "addressPrefix": "[parameters('subnet1Prefix')]",
             "networkSecurityGroup": {
               "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG1'))]"
             }
           }
         },
         {
           "name": "[parameters('subnet2Name')]",
           "properties": {
             "addressPrefix": "[parameters('subnet2Prefix')]",
             "networkSecurityGroup": {
               "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG2'))]"
             }
           }
         },
         {
           "name": "[parameters('subnet3Name')]",
           "properties": {
             "addressPrefix": "[parameters('subnet3Prefix')]",
             "networkSecurityGroup": {
               "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSG3'))]"
             }
           }
         },
         {
           "name": "[parameters('BastionsubnetName')]",
           "properties": {
             "addressPrefix": "[parameters('BastionsubnetPrefix')]"
           }
         }
       ]
     }
   },
    {
       "name": "[parameters('RecoveryServicesVaultName')]",
       "type": "Microsoft.RecoveryServices/vaults",
       "apiVersion": "2018-01-10",
       "location": "[resourceGroup().location]",
        "sku": {
         "name": "RS0",
         "tier": "Standard"
       },
       "properties": {
       }
     }
 ]
}